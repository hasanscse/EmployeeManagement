@model EmployeeManagement.Models.Domain.Department

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DEPARTMENT_ID" />
            <div class="form-group">
                <label asp-for="DEPARTMENT_NAME" class="control-label">Department Name</label>
                <br/>
                <input asp-for="DEPARTMENT_NAME" class="form-control" />

                <span asp-validation-for="DEPARTMENT_NAME" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
